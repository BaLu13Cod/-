# Cloud Security System Configuration
# Copy this file to .env and modify as needed

# System Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false
API_HOST=0.0.0.0
API_PORT=8000

# Machine Learning
ML_AUTO_OPTIMIZATION=true
RL_TRAINING_STEPS=10000
GA_POPULATION_SIZE=100
GA_MUTATION_RATE=0.1
GA_CROSSOVER_RATE=0.8

# Quantum Cryptography
QUANTUM_CRYPTO_ALGORITHM=lattice
LWE_DIMENSION=256
LWE_MODULUS=7681
LWE_STD_DEV=3.2

# Blockchain
MAX_EVENTS_PER_BLOCK=100
BLOCKCHAIN_DIFFICULTY=4

# AI Assistant
VOICE_ENABLED=true
CHAT_ENABLED=true
LANGUAGE=ru-RU
VOICE_RATE=150
VOICE_VOLUME=0.8
OPENAI_API_KEY=

# Cloud Providers
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
AZURE_SUBSCRIPTION_ID=
GCP_PROJECT_ID=
KUBERNETES_CONFIG_PATH=
DOCKER_SOCKET=unix://var/run/docker.sock

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
MFA_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256
HASH_FUNCTION=SHA-256

# Database
DATABASE_TYPE=sqlite
DB_PATH=cloud_security.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloud_security
DB_USER=postgres
DB_PASSWORD=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Connection Settings
CONNECTION_TIMEOUT=30
RETRY_ATTEMPTS=3
SSL_VERIFY=true
